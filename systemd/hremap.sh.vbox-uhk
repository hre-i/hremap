#!/bin/sh

### Keyboard devices
DEV=/dev/input/by-path/platform-i8042-serio-0-event-kbd

opt=--ctrl-map

if [ ! -z "$DEV" ]; then
    case x"`pidof hremap`" in
        x[0-9]*) sudo killall hremap ;;
        *) ;;
    esac
    while true; do
	/usr/local/bin/hremap ${opt} $DEV
	sleep 2
    done
else
    echo "NO $DEV"
    exit 1
fi
